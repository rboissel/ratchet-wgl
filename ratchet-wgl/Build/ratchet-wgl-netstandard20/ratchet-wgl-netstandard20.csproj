    <DocumentationFile>..\..\bin\Release\ratchet-wgl\lib\netstandard2.0\ratchet-wgl.xml</DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="..\..\ratchet-wgl\WGL.cs" Link="WGL.cs" />
