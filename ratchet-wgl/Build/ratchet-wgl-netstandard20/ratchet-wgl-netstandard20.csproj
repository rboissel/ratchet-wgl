    <OutputPath>..\..\bin\Debug\ratchet-wgl\lib\</OutputPath>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DefineConstants>TRACE;NET_STANDARD</DefineConstants>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
